<div id='header-navbar' class='navbar navbar-inverse navbar-static-top' role='navigation'>
  <div class='container'>
    <div class='navbar-right'>
      <ul class='nav navbar-nav'>
        <li class='dropdown'>
          <a href='#' class='dropdown-toggle' data-toggle='dropdown' 
            role='button' aria-expanded='false'>
            <%= current_provider_name %> <span class="caret"></span>
          </a>
          <ul class='dropdown-menu' role='menu'>

            <% if current_provider_id.present? %>
              <li><a href='#'>All providers</a></li>
              <li class='divider'></li>
            <% end %>

            <% available_providers.each do |provider| %>
              <li><a href='#'><%= provider.value %></a></li>
            <% end %>
          </ul>
        </li>

        <% if current_provider_id.present? %>
          <li><%= link_to 'Dashboard', 
            krikri.providers_path(current_provider_id) %></li>
          <li><%= link_to 'Records', 
            krikri.records_path(provider_id: current_provider_id) %></li>
          <li><%= link_to 'Reports', 
            krikri.reports_path(provider_id: current_provider_id) %></li>
        <% else %>
          <li><%= link_to 'Dashboard', krikri.providers_path %></li>
          <li><%= link_to 'Records', krikri.records_path %></li>
          <li><%= link_to 'Reports', krikri.reports_path %></li>
        <% end %>

      </ul>
    </div>
  </div>
</div>
